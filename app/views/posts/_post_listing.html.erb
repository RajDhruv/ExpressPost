<h1><%=page_heading%></h1>
<div class="row" id="user_iteration">
  <%@all_post.each do|post|%>
  <div class="col-md-3" id="post_block_<%=post.id%>">
    <div class="card mb-4 box-shadow" style="max-width:100%;">
      <div class="card-body">
        <center>
          <h3 >
          <%if @owner%>
            <%=link_to "#{post.title}",edit_post_path(post.id), id: "post_title_#{post.id}" ,remote: true%>
          <%else%>
            <%=post.title%>
          <%end%>
          </h3>
        </center>
        <label style="color:grey"><i>by:-</i><%=post.user.name%></label>
        <hr>
        <p class="card-text" id="post_description_<%=post.id%>"><%=post.description%></p>
        <hr>
        <div class="d-flex justify-content-between align-items-center">
          <div class="btn-group">
            
          </div>
          <small class="text-muted"><%=time_ago_in_words(post.created_at) %></small>
        </div>
      </div>
    </div>
  </div>
  <%end%>
</div>