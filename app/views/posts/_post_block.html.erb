<div class="col-md-3" id="post_block_<%=post.id%>">
    <div class="card mb-4 box-shadow" style="max-width:100%;">
      <div class="card-body">
        <center>
          <h3 ><%if @owner%>
            <%=link_to "#{post.title}",edit_post_path(post.id), id: "post_title_#{post.id}" , remote: true%>
          <%else%>
            <%=post.title%>
          <%end%></h3>
        </center>
        <label style="color:grey"><i>by:-</i><%=post.user.name%></label>
        <p class="card-text" id="post_description_<%=post.id%>"><%=post.description%></p>
        <hr>
        <div class="d-flex justify-content-between align-items-center">
          <div class="btn-group">
            <div id="like_div"><label id="like_count_<%=post.id%>"><%=post.votes.length%></label>&nbsp;<%=link_to "<img src='#{asset_path('like.png')}' height='20' width='20' title='Like'>".html_safe,vote_post_votes_path(post_id:post.id),method: 'post', remote: true%></div>
            <%if @owner%>
            &nbsp;
              <div id="delete_div"><%=link_to "<img src='#{asset_path('delete.png')}' height='20' width='20' title='Delete Post'>".html_safe,delete_post_path(id:post.id),method: 'post', remote: true%></div>
            <%end%>
          </div>
          <small class="text-muted"><%=time_ago_in_words(post.created_at) %></small>
        </div>
      </div>
    </div>
  </div>